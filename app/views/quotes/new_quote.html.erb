<section id="main-content">
  <div id="guts">

    <h2 class="page-title">New Quote</h2><%= link_to 'Back', welcome_index_path %>
    <div id="project">
      <span class="quote">Quote# Q1234</span>

      <%= form_for :quote do |f| %>
          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
          </p>

          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>



      <div id="customer-demographics">
        <h2>Customer Demographics/Info</h2>
        <%= f.text_area :body, size: "50x12" %>
      </div>

      <div id="job-desc">
        <h2>Description Of Job</h2>
        <%= f.text_area :body, size: "50x12" %>
        </div>

      <div id="dates">
        <h2 class="page-title">Critical Dates</h2>
        <%= select_date Date.today, prefix: :start_date %>
          <br>
          <label for="calendar">Artwork/Layout Due:</label>
          <select name="calendar" id="calendar">
          </select>
        <p>
          <button class="submit" value="Submit">Submit</button>
      </div>

    </div>

    <div style="clear:both;"></div>

          <p>
            <%= f.submit %>
          </p>
      <% end %>

  </div>

</section>